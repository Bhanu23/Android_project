<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/one"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:layout_column="1"
        android:layout_row="0"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:elevation="24dp"
        android:text=" "
        android:layout_below="@+id/TextView"
        android:layout_marginTop="14dp"
        android:layout_alignStart="@+id/three" />

    <Button
        android:id="@+id/two"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:elevation="24dp"
        android:text=" "
        android:layout_alignBottom="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:layout_alignTop="@+id/one" />

    <Button
        android:id="@+id/three"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:layout_column="1"
        android:layout_row="1"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:elevation="24dp"
        android:text=" "
        android:layout_below="@+id/one"
        android:layout_toStartOf="@+id/four" />

    <Button
        android:id="@+id/four"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:elevation="24dp"
        android:text=" "
        android:layout_marginEnd="16dp"
        android:layout_alignBottom="@+id/three"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/one" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="188dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_column="1"
        android:layout_marginTop="11dp"
        android:layout_row="2"
        android:text="Enter your desired Pattern"
        android:textAlignment="center"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <Button
        android:id="@+id/Lockcontinue"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="3"
        android:background="@color/colorPrimary"
        android:text="Continue"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/three"
        android:layout_toEndOf="@+id/three"
        android:layout_marginTop="33dp" />
</RelativeLayout>
